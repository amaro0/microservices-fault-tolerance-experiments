FROM golang:alpine as builder

ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64

RUN apk add --update iproute2
WORKDIR /build

COPY go.mod .
COPY go.sum .
RUN go mod download
COPY . .

RUN go build -o main proxy.go

WORKDIR /dist
RUN cp /build/main .

EXPOSE 4000
CMD ["/dist/main"]
